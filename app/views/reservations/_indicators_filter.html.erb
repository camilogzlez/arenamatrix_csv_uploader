      <form class="form-inline my-2 my-lg-0" id="filterForm" action="/reservations/indicators" method="get">
  <select class="form-select mr-sm-2" name="scope" id="scopeSelect">
    <option value="all" <%= 'selected' if @selected_scope == 'all' %>>All</option>
    <option value="by_spectacle" <%= 'selected' if @selected_scope == 'by_spectacle' %>>By Spectacle ID</option>
    <option value="by_representation" <%= 'selected' if @selected_scope == 'by_representation' %>>By Representation ID</option>
  </select>
        <select class="form-select mr-sm-2" name="id" id="idSelect">
          <% @dropdown_options.each do |option| %>
            <option value="<%= option %>">
              <%= option %>
            </option>
