<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Get a reference to the second dropdown
    var idSelect = document.getElementById("idSelect");

    // Initially hide the second dropdown
    // idSelect.style.display = "none";

    // Add event listener to the scope select dropdown
    document.getElementById("scopeSelect").addEventListener("change", function() {
      // Show or hide the second dropdown based on the selected option
      if (this.value === "all") {
        idSelect.style.display = "none"; // Hide the second dropdown
      } else {
        idSelect.style.display = "inline-block"; // Show the second dropdown
        // Submit the form when the scope select dropdown changes
        document.getElementById("filterForm").submit();
      }
    });
  });
</script>
